# Constructor.io API Credentials
# =============================================================================
# Get these from your Constructor.io dashboard: https://constructor.io/dashboard
#
# API_KEY (required): Public key for client-side requests (search, browse, autocomplete)
# API_TOKEN (required): Secret key for server-side requests (catalog uploads, admin endpoints)

CONSTRUCTOR_API_KEY=your-api-key
CONSTRUCTOR_API_TOKEN=your-api-token

# Constructor.io API Base URLs
# =============================================================================
# Only change these if you're using a custom Constructor.io deployment

# Search API base URL (for search, browse, autocomplete, recommendations)
CONSTRUCTOR_SEARCH_BASE_URL=https://ac.cnstrc.com

# Agent API base URL (for AI Shopping Agent and Product Insights Agent)
CONSTRUCTOR_AGENT_BASE_URL=https://agent.cnstrc.com

# AI Agent Configuration (Shopping Agent & Product Insights Agent)
# =============================================================================

# Your agent domain (required for Shopping Agent)
# Get this from your Constructor.io dashboard under "Agent" settings
CONSTRUCTOR_AGENT_DOMAIN=your-agent-domain

# Enable content moderation for agent responses (recommended: true)
CONSTRUCTOR_AGENT_GUARD=true

# Maximum number of product recommendation batches from Shopping Agent
CONSTRUCTOR_AGENT_NUM_RESULT_EVENTS=5

# Maximum products per recommendation batch
CONSTRUCTOR_AGENT_NUM_RESULTS_PER_EVENT=4

# HTTP Client Configuration
# =============================================================================

# Request timeout in seconds
CONSTRUCTOR_TIMEOUT=30

# Number of retry attempts for failed requests
CONSTRUCTOR_RETRY_TIMES=2

# Delay between retries in milliseconds
CONSTRUCTOR_RETRY_SLEEP=100

# Catalog Export Configuration
# =============================================================================

# Storage path for exported catalog files (relative to storage/app)
CONSTRUCTOR_EXPORT_PATH=constructor-exports

# Number of products to process per chunk during export
CONSTRUCTOR_EXPORT_CHUNK_SIZE=1000

# Default export format (csv or jsonl)
CONSTRUCTOR_DEFAULT_FORMAT=csv

# Catalog Upload Configuration
# =============================================================================

# Default operation: 'create_or_replace' (full sync) or 'patch' (partial update)
CONSTRUCTOR_DEFAULT_OPERATION=create_or_replace

# Force upload even if there are validation warnings
CONSTRUCTOR_FORCE_UPLOAD=true

# Default section name
CONSTRUCTOR_SECTION=Products

# Task Monitoring Configuration
# =============================================================================

# Seconds between status checks when waiting for task completion
CONSTRUCTOR_TASK_POLL_INTERVAL=10

# Maximum number of status check attempts
CONSTRUCTOR_TASK_MAX_ATTEMPTS=60

# Overall timeout in seconds for task completion
CONSTRUCTOR_TASK_TIMEOUT=600

# File Cleanup Configuration
# =============================================================================

# Automatically delete export files after successful upload
CONSTRUCTOR_CATALOG_CLEANUP_FILES=true

# Number of days to retain export files before cleanup
CONSTRUCTOR_FILE_RETENTION_DAYS=7

# Notification Configuration
# =============================================================================

# Slack webhook URL for notifications (optional)
CONSTRUCTOR_SLACK_WEBHOOK=

# Send notification on successful catalog push
CONSTRUCTOR_NOTIFY_SUCCESS=false

# Send notification on failed catalog push
CONSTRUCTOR_NOTIFY_FAILURE=true

# Laravel Scout Configuration (for ConstructorEngine)
# =============================================================================
# Add these to your main .env file or config/scout.php

# SCOUT_DRIVER=constructor

# Scout-specific Constructor settings (used by ConstructorEngine)
# SCOUT_CONSTRUCTOR_API_KEY=${CONSTRUCTOR_API_KEY}
# SCOUT_CONSTRUCTOR_API_TOKEN=${CONSTRUCTOR_API_TOKEN}
# SCOUT_CONSTRUCTOR_BASE_URL=${CONSTRUCTOR_SEARCH_BASE_URL}
# SCOUT_CONSTRUCTOR_CLIENT_ID=cio-laravel-1.0
# SCOUT_CONSTRUCTOR_FORCE=false
# SCOUT_CONSTRUCTOR_NOTIFICATION_EMAIL=your-email@example.com

# Sample/Test Push Configuration
# =============================================================================

# Enable sample catalog push feature
CONSTRUCTOR_SAMPLE_ENABLED=true

# Default number of products for sample push
CONSTRUCTOR_SAMPLE_DEFAULT_LIMIT=1000

# Maximum products allowed in sample push
CONSTRUCTOR_SAMPLE_MAX_LIMIT=10000
